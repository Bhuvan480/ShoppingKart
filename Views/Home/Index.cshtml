@{
    ViewData["Title"] = "Home Page";
}

<style>
    .product-img{
        width: 100px;
    }
</style>

<div class="container-fluid">
    <div class="row">
        @foreach (var item in ViewBag.Products)
        {
            <div id="@item.ProductId" class="card m-5 col-3">
                <div class="card-header">
                    <div class="row">
                        <div class="col-6 d-flex flex-column text-center mt-5">
                            <span class="h4">@item.ProductName</span>
                        </div>
                        <div id="logo-div" class="col-6">
                            <img class="product-img" src="@item.ProductImage" alt="logo" />
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    <p>@item.ProductDescription</p>
                    <p>@item.ProductPrice</p>
                </div>
            </div>
        }
    </div>
</div>