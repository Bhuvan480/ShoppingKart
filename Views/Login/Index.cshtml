@{
    ViewData["Title"] = "Login";
}
<link href="~/css/login.css" rel="stylesheet" />

<div class="main-bg">
    <div id="card-id" class="card mt-5">
        <div class="card-header">
            <div class="row">
                <div class="col-6 d-flex flex-column text-center mt-5">
                    <span class="logo-title">Welcome</span>
                    <span class="logo-title">To</span>
                    <span class="logo-title">Shopping Kart</span>
                </div>
                <div id="logo-div" class="col-6">
                    <img id="logo-img" src="~/images/shopping-cart-logo.jpg" alt="logo" />
                </div>
            </div>
        </div>
        <div class="card-body">
           <form id="login-form">
                <div class="form-group mb-3">
                    <label for="login-email" class="form-label">Email</label>
                    <input type="text" id="login-email" name="email" class="form-control" placeholder="Email" />
                </div>
                <div class="form-group mb-3">
                    <label for="login-password" class="form-label">Password</label>
                    <input type="password" id="login-password" name="password" class="form-control" placeholder="Password" />
                </div>
                <div><label id="login-validate-error" class="label-error"></label></div>
                <div class="mt-3 mb-3">
                    <button type="button" class="btn btn-outline-secondary float-end" onclick="login()" >Login</button>
                </div>
                <div class="mt-2 pt-2 text-center">
                   <small>
                        <span>New user? </span></><a asp-controller="Register" asp-action="Index">Register here!</a>
                   </small>
                </div>
           </form>
        </div>
    </div>
</div>

@section Scripts{
    <script src="~/js/login.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
}