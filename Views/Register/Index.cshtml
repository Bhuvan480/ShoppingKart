@{
    ViewData["Title"] = "Register";
}

<link href="~/css/login.css" rel="stylesheet" />

<div class="main-bg">
    <div id="card-id" class="card mt-5">
        <div class="card-header">
            <div class="row">
                <div class="col-9 d-flex flex-column text-center">
                    <span class="logo-title">Register here</span>
                    <span class="logo-title">Enjoy your shopping!!</span>
                </div>
                <div id="logo-div" class="col-3">
                    <img id="register-logo-img" src="~/images/shopping-cart-logo.jpg" alt="logo" />
                </div>
            </div>
        </div>
        <div class="card-body">
            <form id="register-form">
                <div class="form-group mb-3">
                    <label for="username" class="form-label">Name</label>
                    <input type="text" id="username" name="username" class="form-control" placeholder="Name" />
                </div>
                <div class="form-group mb-3">
                    <label for="register-email" class="form-label">Email</label>
                    <input type="email" id="register-email" name="email" class="form-control" placeholder="Email" />
                </div>
                <div class="form-group mb-3">
                    <label for="register-password" class="form-label">Password</label>
                    <input type="password" id="register-password" name="password" class="form-control" placeholder="Password" />
                </div>
                <div class="form-group mb-3">
                    <label for="confirm-password" class="form-label">Confirm Password</label>
                    <input type="password" id="confirm-password" name="ConfirmPassword" class="form-control" placeholder="Password" />
                </div>
                <div><label id="register-validate-error" class="label-error"></label></div>
                <div class="mt-3 mb-3">
                    <button type="button" class="btn btn-outline-secondary float-end" onclick="register()">Register</button>
                </div>
                <div class="mt-2 pt-2 text-center">
                    <small>
                        <span>Existing user? </span></><a asp-controller="Login" asp-action="Index">Login here!</a>
                    </small>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts{
    <script src="~/js/login.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
}